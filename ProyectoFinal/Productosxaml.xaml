        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productosxaml" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="256*"/>
        </Grid.RowDefinitions>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="27,36.701,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Categoria:" HorizontalAlignment="Left" Margin="23,80.701,0,0" VerticalAlignment="Top" Grid.Row="1"/>
