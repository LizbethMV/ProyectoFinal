        <TextBox x:Name="txtno" HorizontalAlignment="Left" Height="23" Margin="124,36.701,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox x:Name="txtCa" HorizontalAlignment="Left" Height="23" Margin="124,80.701,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox x:Name="txtCan" HorizontalAlignment="Left" Height="23" Margin="124,123.701,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Label Content="Productos" HorizontalAlignment="Left" Margin="124,10,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="113,178.701,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Grid.Row="1"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="113,203.701,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Grid.Row="1"/>

    </Grid>
</Window>
